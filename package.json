{
	"name": "@commertize/nexus",
	"version": "1.0.0",
	"description": "Commertize smart contracts for real estate tokenization, debt instruments, and mortgage lending",
	"scripts": {
		"build": "tsup index.ts --format cjs,esm --dts --clean",
		"compile": "hardhat compile",
		"test": "hardhat test",
		"test:coverage": "hardhat coverage",
		"node": "hardhat node",
		"clean": "hardhat clean",
		"deploy:localhost": "hardhat run scripts/deploy.js --network localhost",
		"deploy:testnet": "hardhat run scripts/deploy.js --network hedera-testnet",
		"deploy:mainnet": "hardhat run scripts/deploy.js --network hedera-mainnet",
		"release": "node scripts/release.js"
	},
	"keywords": [
		"real-estate",
		"tokenization",
		"ERC-3643",
		"DeFi",
		"mortgage",
		"debt"
	],
	"author": "Commertize",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"deployment.*.json",
		"artifacts/contracts/**/*.json",
		"!artifacts/build-info"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./deployment.json": "./deployment.testnet.json",
		"./deployment.testnet.json": "./deployment.testnet.json",
		"./deployment.mainnet.json": "./deployment.mainnet.json",
		"./deployment.localhost.json": "./deployment.localhost.json",
		"./artifacts/*": "./artifacts/contracts/*"
	},
	"type": "commonjs",
	"packageManager": "pnpm@9.15.4",
	"devDependencies": {
		"@nomicfoundation/hardhat-toolbox": "^5.0.0",
		"@openzeppelin/contracts": "^5.1.0",
		"@openzeppelin/hardhat-upgrades": "^3.9.1",
		"@types/node": "^25.0.9",
		"chalk": "^4.1.2",
		"hardhat": "^2.22.0",
		"prompts": "^2.4.2",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@layerzerolabs/lz-evm-oapp-v2": "^3.0.154",
		"@layerzerolabs/lz-evm-protocol-v2": "^3.0.154",
		"@openzeppelin/contracts-upgradeable": "^5.4.0",
		"dotenv": "^17.2.3",
		"ethers": "^6.16.0"
	}
}
