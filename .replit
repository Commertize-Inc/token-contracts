modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
PLAID_ENV = "sandbox"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Landing"

[[workflows.workflow]]
name = "Landing"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/landing && pnpm dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3001

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 37807
externalPort = 3002

[[ports]]
localPort = 38151
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd apps/landing && pnpm start"]
build = ["bash", "-c", "pnpm install --frozen-lockfile && cd apps/landing && pnpm build"]
