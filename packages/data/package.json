{
	"name": "@commertize/data",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"development": "./src/index.ts",
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		},
		"./config": {
			"types": "./dist/mikro-orm.config.d.ts",
			"import": "./dist/mikro-orm.config.js",
			"require": "./dist/mikro-orm.config.cjs"
		},
		"./enums": {
			"development": "./src/enums/index.ts",
			"types": "./dist/enums/index.d.ts",
			"import": "./dist/enums/index.js",
			"require": "./dist/enums/index.cjs"
		},
		"./schemas": {
			"development": "./src/schemas/index.ts",
			"types": "./dist/schemas/index.d.ts",
			"import": "./dist/schemas/index.js",
			"require": "./dist/schemas/index.cjs"
		},
		"./schemas/*": {
			"development": "./src/schemas/*.ts",
			"default": "./src/schemas/*.ts"
		},
		"./encryption": {
			"development": "./src/utils/encryption.ts",
			"types": "./dist/utils/encryption.d.ts",
			"import": "./dist/utils/encryption.js",
			"require": "./dist/utils/encryption.cjs"
		},
		"./*": "./dist/*"
	},
	"scripts": {
		"build": "tsup src/index.ts src/mikro-orm.config.ts src/enums/index.ts src/schemas/index.ts src/utils/encryption.ts --format cjs,esm --dts --clean --no-splitting --external @mikro-orm/core --external @mikro-orm/postgresql --external @mikro-orm/reflection --external @mikro-orm/seeder --external @mikro-orm/migrations",
		"dev": "tsup src/index.ts src/mikro-orm.config.ts src/enums/index.ts src/schemas/index.ts src/utils/encryption.ts --format cjs,esm --dts --watch --external @mikro-orm/core --external @mikro-orm/postgresql --external @mikro-orm/reflection --external @mikro-orm/seeder --external @mikro-orm/migrations",
		"db:seed": "NODE_OPTIONS='--import tsx' mikro-orm seeder:run --config src/mikro-orm.config.ts",
		"migration:create": "NODE_OPTIONS='--import tsx' mikro-orm migration:create --config src/mikro-orm.config.ts",
		"migration:up": "NODE_OPTIONS='--import tsx' mikro-orm migration:up --config src/mikro-orm.config.ts",
		"migration:pending": "NODE_OPTIONS='--import tsx' mikro-orm migration:pending --config src/mikro-orm.config.ts",
		"clean": "rm -rf node_modules dist .turbo .next .vite coverage"
	},
	"dependencies": {
		"@commertize/utils": "workspace:*",
		"@mikro-orm/core": "^6.6.2",
		"@mikro-orm/postgresql": "^6.6.2",
		"@mikro-orm/reflection": "^6.6.2",
		"dotenv": "^17.2.3",
		"reflect-metadata": "^0.2.2",
		"uuid": "^11.1.0",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@mikro-orm/cli": "^6.6.2",
		"@mikro-orm/migrations": "^6.6.2",
		"@mikro-orm/seeder": "^6.6.2",
		"@swc/core": "^1.15.4",
		"@types/node": "^20.19.26",
		"@types/uuid": "^10.0.0",
		"ts-node": "^10.9.2",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
